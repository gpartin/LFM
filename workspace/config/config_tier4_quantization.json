{
  "tier": 4,
  "category": "Quantization & Spectra",
  "output_dir": "results/Quantization",
  "hardware": {
    "gpu_enabled": true,
    "use_fused_cuda": true,
    "precision": "float64"
  },
  "parameters": {
    "dt": 0.01,
    "dx": 0.1,
    "N": 1024,
    "steps": 16000,
    "save_every": 20,
    "chi_uniform": 0.25
  },
  "tolerances": {
    "energy_transfer_conservation": 0.01,
    "spectral_linearity_error": 0.05,
    "phase_amplitude_coupling": 0.1,
    "wavefront_dispersion": 0.15,
    "blowout_energy_limit": 100.0,
    "spectral_err_coarse": 0.02,
    "spectral_err_fine": 0.005,
    "threshold_err": 0.30,
    "uncertainty_tol_frac": 0.05,
    "bound_state_error": 0.02,
    "tunneling_error": 2.0,
    "planck_error": 0.50,
    "zero_point_error": 0.15,
    "duality_visibility_drop": 0.2
  },
  "tests": [
    {
      "test_id": "QUAN-01",
      "description": "ΔE Transfer — Low Energy",
      "mode": "energy_transfer",
      "N": 512,
      "dx": 0.1,
      "dt": 0.005,
      "chi_uniform": 0.20,
      "mode_1": 1,
      "mode_2": 2,
      "amplitude_ratio": 0.2,
      "steps": 5000,
      "measure_every": 50,
      "skip": false,
      "comment": "Test energy conservation during low-energy mode exchange"
    },
    {
      "test_id": "QUAN-02",
      "description": "ΔE Transfer — High Energy",
      "mode": "energy_transfer",
      "N": 512,
      "dx": 0.1,
      "dt": 0.005,
      "chi_uniform": 0.20,
      "mode_1": 3,
      "mode_2": 5,
      "amplitude_ratio": 0.8,
      "steps": 5000,
      "measure_every": 50,
      "skip": false,
      "comment": "Test energy conservation during high-energy mode exchange"
    },
    {
      "test_id": "QUAN-03",
      "description": "Spectral Linearity — Coarse Steps",
      "mode": "spectral_linearity",
      "N": 512,
      "dx": 0.2,
      "dt": 0.01,
      "steps": 20000,
      "save_every": 10,
      "chi_uniform": 0.20,
      "num_modes": 5,
      "amplitude_levels": [0.1, 0.3, 0.5],
      "skip": false,
      "comment": "Test that spectral response scales linearly with amplitude (coarse resolution)"
    },
    {
      "test_id": "QUAN-04",
      "description": "Spectral Linearity — Fine Steps",
      "mode": "spectral_linearity",
      "N": 1024,
      "dx": 0.1,
      "dt": 0.005,
      "steps": 40000,
      "save_every": 8,
      "chi_uniform": 0.20,
      "num_modes": 8,
      "amplitude_levels": [0.05, 0.1, 0.2, 0.3, 0.4],
      "skip": false,
      "comment": "Test that spectral response scales linearly with amplitude (fine resolution)"
    },
    {
      "test_id": "QUAN-05",
      "description": "Phase-Amplitude Coupling — Low Noise",
      "mode": "phase_amplitude_coupling",
      "N": 1024,
      "dx": 0.1,
      "dt": 0.005,
      "chi_uniform": 0.20,
      "carrier_mode": 3,
      "mod_frequency": 0.05,
      "mod_amplitude": 0.1,
      "noise_level": 0.01,
      "steps": 8000,
      "skip": false,
      "comment": "Test for spurious AM→PM conversion in low noise (should be zero for linear system)"
    },
    {
      "test_id": "QUAN-06",
      "description": "Phase-Amplitude Coupling — High Noise",
      "mode": "phase_amplitude_coupling",
      "N": 1024,
      "dx": 0.1,
      "dt": 0.005,
      "chi_uniform": 0.20,
      "carrier_mode": 3,
      "mod_frequency": 0.05,
      "mod_amplitude": 0.1,
      "noise_level": 0.1,
      "steps": 8000,
      "skip": false,
      "comment": "Test for spurious AM→PM conversion in high noise (should be zero for linear system)"
    },
    {
      "test_id": "QUAN-07",
      "description": "Nonlinear Wavefront Stability",
      "mode": "wavefront_stability",
      "N": 1024,
      "dx": 0.1,
      "dt": 0.005,
      "chi_uniform": 0.25,
      "packet_amplitude": 1.0,
      "packet_width": 5.0,
      "packet_k": 2.0,
      "steps": 10000,
      "measure_every": 100,
      "skip": false,
      "comment": "Test that large-amplitude wavepackets maintain shape (no nonlinear steepening)"
    },
    {
      "test_id": "QUAN-08",
      "description": "High-Energy Lattice Blowout Test",
      "mode": "lattice_blowout",
      "N": 512,
      "dx": 0.1,
      "dt_cfl_fraction": 0.99,
      "chi_uniform": 0.20,
      "packet_amplitude": 2.0,
      "packet_k": 3.0,
      "steps": 2000,
      "skip": false,
      "comment": "Test numerical stability at high energy near CFL limit (should not blow up)"
    },
    {
      "test_id": "QUAN-09",
      "description": "Heisenberg uncertainty — Δx·Δk ≈ 1/2",
      "mode": "uncertainty",
      "dx": 0.1,
      "dt": 0.005,
      "N": 1024,
      "chi_uniform": 0.20,
      "sigma_x_list": [2.0, 3.0, 4.0, 6.0, 8.0],
      "steps": 1,
      "save_every": 1,
      "skip": false
    },
    {
      "test_id": "QUAN-10",
      "description": "Bound state quantization — discrete energy eigenvalues E_n emerge from boundary conditions",
      "mode": "bound_state_quantization",
      "N": 512,
      "dx": 0.1,
      "dt": 0.005,
      "chi_uniform": 0.20,
      "steps": 10000,
      "num_modes": 6,
      "skip": false,
      "comment": "CRITICAL: Proves energy quantization - fundamental quantum signature"
    },
    {
      "test_id": "QUAN-11",
      "description": "Zero-point energy — ground state E₀ = ½ℏω ≠ 0 (vacuum fluctuations)",
      "mode": "zero_point_energy",
      "N": 512,
      "dx": 0.1,
      "dt": 0.005,
      "chi_uniform": 0.20,
      "num_modes": 4,
      "steps": 2000,
      "measure_every": 10,
      "skip": false,
      "comment": "CRITICAL: Quantum ground state - proves vacuum has non-zero energy (E ∝ ω signature)"
    },
    {
      "test_id": "QUAN-12",
      "description": "Quantum tunneling — barrier penetration when E < V (classically forbidden)",
      "mode": "tunneling",
      "N": 2048,
      "dx": 0.05,
      "dt": 0.005,
      "steps": 5000,
      "packet_k": 2.5,
      "packet_x0": 0.20,
      "packet_sigma": 3.0,
      "chi_background": 0.0,
      "chi_barrier": 3.5,
      "barrier_x0_frac": 0.45,
      "barrier_x1_frac": 0.50,
      "skip": false,
      "comment": "CRITICAL: Quintessentially quantum - adjusted for thinner barrier to get measurable but small transmission"
    },
    {
      "test_id": "QUAN-13",
      "description": "Wave-particle duality — which-way information destroys interference",
      "mode": "wave_particle_duality",
      "N": 2048,
      "dx": 0.08,
      "dt": 0.004,
      "chi_uniform": 0.10,
      "slit_separation": 8.0,
      "slit_width": 3.0,
      "source_x0": 0.20,
      "screen_x0": 0.80,
      "wavelength": 5.0,
      "packet_width": 12.0,
      "steps": 5000,
      "measure_every": 50,
      "skip": false,
      "comment": "CRITICAL: Double-slit experiment - complementarity principle (wave vs particle behavior). Increased resolution and steps."
    },
    {
      "test_id": "QUAN-14",
      "description": "Non-thermalization — validates Klein-Gordon conserves energy (doesn't approach Planck)",
      "mode": "planck_distribution",
      "N": 512,
      "dx": 0.1,
      "dt": 0.005,
      "chi_uniform": 0.20,
      "temperature": 0.8,
      "num_modes": 8,
      "steps": 2000,
      "measure_every": 20,
      "skip": false,
      "comment": "Tests conservation: Linear Klein-Gordon cannot thermalize. System should maintain initial (flat) spectrum, NOT evolve toward Planck distribution."
    }
  ]
}
