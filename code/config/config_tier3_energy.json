{
  "base_paths": {
    "results": "results"
  },
  "hardware": {
    "gpu_enabled": true,
    "precision": "float64"
  },
  "tier": 3,
  "category": "Energy Conservation & Transport",
  "output_dir": "results/Energy",
  "parameters": {
    "c": 1.0,
