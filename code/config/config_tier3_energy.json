{
  "base_paths": {
    "results": "results"
  },
  "hardware": {
    "gpu_enabled": true,
    "precision": "float64"
  },
  "tier": 3,
  "category": "Energy Conservation & Transport",
  "output_dir": "results/Energy",
  "parameters": {
    "c": 1.0,
    "time_step": 5e-4,
    "space_step": 5e-3,
    "N": 256,
    "stencil_order": 4,
    "save_every": 10
  },
  "tolerances": {
    "energy_drift": 0.01,
    "wave_integrity_max_drop": 0.05
  },
  "notes_on_tolerance": "energy_drift=0.01 (1%) is realistic for Klein-Gordon on discrete lattice without artificial enforcement. Actual drift ~0.4% observed, which is acceptable discretization error.",
  "tests": [
    {
      "test_id": "ENER-01",
      "description": "Global conservation — short",
      "steps": 5000,
      "chi_const": 0.0,
      "enforce_energy": false,
      "skip": false
    },
    {
      "test_id": "ENER-02",
      "description": "Global conservation — long",
      "steps": 20000,
      "chi_const": 0.0,
      "enforce_energy": false,
      "skip": false
    },
    {
      "test_id": "ENER-03",
      "description": "Wave integrity — mild curvature",
      "chi_gradient": [0.0, 0.05],
      "steps": 10000,
      "check_wave_integrity": true,
      "enforce_energy": false,
      "skip": false
    },
    {
      "test_id": "ENER-04",
      "description": "Wave integrity — steep curvature",
      "chi_gradient": [0.0, 0.1],
      "steps": 10000,
      "check_wave_integrity": true,
      "enforce_energy": false,
      "skip": false
    },
    {
      "test_id": "ENER-05",
      "description": "Hamiltonian partitioning — uniform χ (KE ↔ GE flow)",
      "ic": "gaussian",
      "chi_const": 0.0,
      "steps": 5000,
      "track_hamiltonian_components": true,
      "enforce_energy": false,
      "energy_drift_max": 0.01,
      "skip": false
    },
    {
      "test_id": "ENER-06",
      "description": "Hamiltonian partitioning — with mass term (KE ↔ GE ↔ PE flow)",
      "ic": "gaussian",
      "chi_const": 0.15,
      "steps": 5000,
      "track_hamiltonian_components": true,
      "enforce_energy": false,
      "energy_drift_max": 0.01,
      "skip": false
    },
    {
      "test_id": "ENER-07",
      "description": "Hamiltonian partitioning — χ-gradient field (energy flow in curved spacetime)",
      "ic": "gaussian",
      "chi_gradient": [0.05, 0.20],
      "steps": 5000,
      "track_hamiltonian_components": true,
      "enforce_energy": false,
      "energy_drift_max": 0.01,
      "skip": false
    },
    {
      "test_id": "ENER-08",
      "description": "Dissipation — weak damping (exponential decay, γ=1e-3 per unit time)",
      "ic": "gaussian",
      "chi_const": 0.0,
      "damping": 5e-7,
      "steps": 5000,
      "enforce_energy": false,
      "energy_drift_max": 0.10,
      "track_hamiltonian_components": false,
      "skip": false
    },
    {
      "test_id": "ENER-09",
      "description": "Dissipation — strong damping (exponential decay, γ=1e-2 per unit time)",
      "ic": "gaussian",
      "chi_const": 0.0,
      "damping": 5e-6,
      "steps": 5000,
      "enforce_energy": false,
      "energy_drift_max": 0.20,
      "track_hamiltonian_components": false,
      "skip": false
    },
    {
      "test_id": "ENER-10",
      "description": "Thermalization — noise + damping reaches steady state",
      "ic": "gaussian",
      "chi_const": 0.0,
  "noise_amp": 1.5e-5,
  "damping": 1.2e-5,
      "steps": 8000,
      "require_entropy_monotonic": false,
      "check_wave_integrity": false,
      "enforce_energy": false,
      "energy_drift_max": 0.20,
      "track_hamiltonian_components": false,
      "skip": false
    }
  ],
  "notes": "Tier-3 unified test: verifies energy conservation, wave integrity, entropy growth under variable chi(x)."
